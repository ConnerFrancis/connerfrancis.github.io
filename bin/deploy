#!/usr/bin/env bash

echo ""
echo "==> Adding all files to dev branch..."
echo ""
git add .

echo ""
echo "==> Commiting changes..."
echo ""
git commit

echo ""
echo "==> Pushing changes..."
echo ""
git push

echo ""
echo "==> Building site..."
echo ""
npm build --verbose

echo ""
echo "==> Deploying site..."
echo ""
git-directory-deploy --directory dist --branch master